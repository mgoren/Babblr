<h3>Edit Comment</h3>

<%= bootstrap_form_for([@post, @comment]) do |f| %>
  <div class="form-group">
    <%= f.text_area :text %>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to "Delete Comment", post_comment_path(@post, @comment), data: {confirm: "Delete comment?", method: "delete"}, class: "btn btn-danger btn-delete" %>
